<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="1-add-columns-to-user" author="yourname">
        <addColumn tableName="jhi_user">
            <column name="city" type="varchar(255)"/>
            <column name="personality_traits" type="VARCHAR"/>
            <column name="budget" type="DOUBLE"/>
            <column name="roommates_preferences" type="VARCHAR"/>
            <column name="role" type="varchar(255)" defaultValue="STUDENT">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
